<!-- views/signup.ejs -->
<%- include('head', {}); %>

<body>
    <script type="text/javascript">
      var utag_data = {
        page_name: "signup", // Contains a user-friendly name for the page.
        ga_eventCategory : "New User Sign Up", // GA event Category
        ga_eventLabel : "Sign Up Link", // GA: Event Label
        ga_eventAction : "link event" // GA: Event Action
      };
    </script>
    
    <!-- Loading script asynchronously -->
    <script type="text/javascript">
      (function(a, b, c, d) {
        a = "//tags.tiqcdn.com/utag/services-presentations/nam-ngo/prod/utag.js";
        b = document;
        c = "script";
        d = b.createElement(c);
        d.src = a;
        d.type = "text/java" + c;
        d.async = true;
        a = b.getElementsByTagName(c)[0];
        a.parentNode.insertBefore(d, a);
      })();
    </script>
    <main role="main" id="main-index">
            <h1 class="sign-head">Sign up</h1>
        <section role="region" class="form-sign">
            <!-- show any messages that come back with authentication -->
            <% if (message.length > 0) { %>
            <div class="alert alert-danger"><%= message %></div>
            <% } %>
            <!-- SIGN UP FORM -->
            <form class="sign-form" action="/signup" method="post">
                <div class="form-group">
                    <label>Email</label>
                    <input type="email" class="form-control" name="email" required>
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" name="password" required>
                </div>
                <div class="form-group">
                    <label>Confirm Password</label>
                    <input type="password" class="form-control" name="passwordv" required>
                </div>
                <div class="form-group">
                  <label>Age</label>
                  <input type="number" class="form-control" name="age" placeholder="ex. 18">
              </div>
                <button type="submit" class="btn">Sign up</button>
            </form>
            <p class="form-text">Already have an account? <a class="links" href="/login">Log in</a></p>
            <p class="form-text">Or go <a class="links" href="/">home</a>.</p>
        </section>
    </main>
    <%- include('scripts', {}); %>
</body>
</html>
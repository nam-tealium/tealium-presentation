<!-- views/login.ejs -->
<%- include('head', {}); %>

<body>
    <script type="text/javascript">
      var utag_data = {
        page_name: "login", // Contains a user-friendly name for the page.
        page_category: "log in form", // Contains a user-friendly page category, e.g. 'appliance page'
      };
    </script>
    
    <!-- Loading script asynchronously -->
    <script type="text/javascript">
      (function(a, b, c, d) {
        a = "//tags.tiqcdn.com/utag/services-presentations/nam-ngo/prod/utag.js";
        b = document;
        c = "script";
        d = b.createElement(c);
        d.src = a;
        d.type = "text/java" + c;
        d.async = true;
        a = b.getElementsByTagName(c)[0];
        a.parentNode.insertBefore(d, a);
      })();
    </script>
    <main role="main" id="main-index">
            <h1 class="log-head">Log in</h1>
        <section role="region" class="form-log">      
            <!-- show any messages that come back with authentication -->
            <% if (message.length > 0) { %>
            <div class="alert alert-danger"><%= message %></div>
            <% } %>
            <!-- LOGIN FORM -->
            <form class="log-form" action="/login" method="post">
                <div class="form-group">
                    <label>Email</label>
                    <input type="text" class="form-control" name="email" placeholder="demo@demo.com" required>
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" name="password" placeholder="demo" required>
                </div>

                <button type="submit" class="btn btn-warning btn-lg">Log in</button>
            </form>
            <p class="form-text">Need an account? <a class="links" href="/signup">Sign up</a></p>
            <p class="form-text">Or go <a class="links" href="/">home</a>.</p>
        </section>
    </main>
    <%- include('scripts', {}); %>
</body>
</html>